# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
# Python files should use LF line endings for cross-platform compatibility
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.cfg text eol=lf
*.ini text eol=lf
*.toml text eol=lf
*.env text eol=lf
*.env.* text eol=lf
.env* text eol=lf
*.requirements text eol=lf
requirements*.txt text eol=lf
.gitignore text eol=lf
.dockerignore text eol=lf
Dockerfile text eol=lf
Dockerfile.* text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Declare files that will always have CRLF line endings on checkout.
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.pyc binary
*.pyo binary
*.pyd binary
*.whl binary
*.egg binary
*.so binary
*.exe binary
*.dll binary
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary
*.rar binary

# Jupyter notebooks
*.ipynb text eol=lf